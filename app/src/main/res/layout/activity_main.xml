<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ImageView
        android:id="@+id/imageCracher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_cracker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/imageSeiv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/seif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCracher"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
         />

    <ImageView
        android:id="@+id/imageBtnPlay"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_btnplay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageSeiv"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
         />

    <ImageView
        android:id="@+id/imageBtnRules"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_btnrules"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBtnPlay"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
         />

</androidx.constraintlayout.widget.ConstraintLayout>